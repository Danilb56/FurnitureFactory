<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
            AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.furniture_factory.controllers.UserController">
    <HBox alignment="CENTER"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
        <padding>
            <Insets bottom="20.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <VBox alignment="CENTER" spacing="40">
            <HBox alignment="CENTER" spacing="30">
                <VBox spacing="40">
                    <Label prefHeight="25.6" text="Логин"/>
                    <Label prefHeight="25.6" text="Пароль"/>
                </VBox>
                <VBox spacing="40">
                    <TextField fx:id="accountLoginField" prefWidth="150.0"/>
                    <TextField fx:id="accountPasswordField" prefWidth="150.0"/>
                </VBox>
            </HBox>
            <HBox alignment="CENTER" spacing="50">
                <Button layoutX="77.0" layoutY="175.0" mnemonicParsing="false" onAction="#updateUser"
                        text="Сохранить изменения"/>
                <Button layoutX="414.0" layoutY="310.0" mnemonicParsing="false" onAction="#logout"
                        text="Выйти из аккаунта"/>
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>
