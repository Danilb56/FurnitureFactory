<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.furniture_factory.controllers.FurnitureLineController">
<padding>
    <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
</padding>
<ToolBar>
    <Button mnemonicParsing="false" onAction="#addFurnitureLine" prefWidth="200.0" text="Добавить" />
    <Button mnemonicParsing="false" onAction="#editFurnitureLine" prefWidth="200.0" text="Изменить" />
    <Button mnemonicParsing="false" onAction="#updatePage" prefWidth="200.0" text="Обновить" />
</ToolBar>

<TableView fx:id="table" layoutX="10.0" layoutY="60.0">
    <columns>
        <TableColumn fx:id="idColumn" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="100.0" text="ID" />
        <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Наименование" />
    </columns>
</TableView>
</VBox>
